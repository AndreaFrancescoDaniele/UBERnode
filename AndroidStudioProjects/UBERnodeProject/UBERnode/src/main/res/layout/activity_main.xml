<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/textView"
            android:text="X Coordinate: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top" />

        <TextView
            android:id="@+id/textView2"
            android:text="Y Coordinate: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView3"
            android:text="Z Coordinate: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/xCoorProgressBar"
            android:layout_gravity="center_horizontal|top"
            android:indeterminate="false"
            android:max="10"
            android:layout_marginLeft="24dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/yCoorProgressBar"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="10"
            android:layout_marginLeft="24dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/zCoorProgressBar"
            android:layout_gravity="center_horizontal|bottom"
            android:indeterminate="false"
            android:max="10"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/xCoor"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top" />

        <TextView
            android:id="@+id/yCoor"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:id="@+id/zCoor"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

    <TextView
        android:layout_width="900dp"
        android:layout_height="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView6"
        android:background="#000001"
        android:text=" " />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:id="@+id/gridLayout"
        android:layout_gravity="center_horizontal">

        <ToggleButton
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:id="@+id/rollToggleButton"
            android:layout_gravity="center_horizontal|top"
            android:textOff="Enable ROLL"
            android:textOn="Disable ROLL"
            android:layout_row="0"
            android:layout_column="0"
            android:checked="true"
            android:onClick="onRollToggleClicked" />

        <ToggleButton
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:id="@+id/pitchToggleButton"
            android:layout_gravity="center"
            android:textOff="Enable PITCH"
            android:textOn="Disable PITCH"
            android:layout_marginTop="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:checked="true"
            android:onClick="onPitchToggleClicked" />
    </GridLayout>

    <TextView
        android:layout_width="900dp"
        android:layout_height="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView4"
        android:background="#000001"
        android:text=" " />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="178dp">





        <ScrollView android:id="@+id/scroller"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:fillViewport="false">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/console"
                android:paddingBottom="8dip"
                android:background="#ffffff"
                android:enabled="false"/>

        </ScrollView>

    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_gravity="center_horizontal"
        android:onClick="onSettingsClick"/>

    <TextView
        android:layout_width="900dp"
        android:layout_height="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5"
        android:background="#000001"
        android:text=" "
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:id="@+id/textView7"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection"
        android:id="@+id/textView9"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Not Connected!"
        android:id="@+id/connectionStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:id="@+id/textView10"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OffLine!"
        android:id="@+id/sensorsStatus" />

</LinearLayout>